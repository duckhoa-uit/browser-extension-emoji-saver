{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev --no-cache  --continue",
    "dev:extension": "turbo dev --no-cache  --continue --scope=\"@emoji-saver/extension-emoji-saver\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:extension": "turbo test --filter=extension-emoji-saver",
    "typecheck": "turbo typecheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "^1.10.14"
  },
  "packageManager": "pnpm@8.6.10",
  "dependencies": {
    "@types/node": "18"
  }
}